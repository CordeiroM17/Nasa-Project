---
import { ClientRouter } from "astro:transitions";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body class="flex justify-center h-screen">
		<div class="mx-auto px-4 py-8 w-full h-full flex flex-col justify-center">
			<Navbar />
			<main class="bg-[#F7F4ED] h-screen flex flex-col items-center">
				<slot/>
			</main>
			<Footer />
		</div>
		<script src="../utils/languages.js"></script>
	</body>
</html>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

</style>